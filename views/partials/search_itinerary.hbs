<div class="field is-horizontal" id="search-itinerary-form">
    <div class="field-label is-normal">
        <label class="label">From</label>
    </div>
    <div class="field-body">
        <div class="field">
            <p class="control is-expanded has-icons-left">
                <input id="direction-from" class="input" type="text" placeholder="Enter address" required>
                <span class="icon is-small is-left">
                    <i class="fas fa-flag"></i>
                </span>
            </p>
        </div>
    </div>
    <div class="field-label is-normal">
        <label class="label">To</label>
    </div>
    <div class="field-body">
        <div class="field">
            <p class="control is-expanded has-icons-left">
                <input id="direction-to" class="input" type="text" placeholder="Enter address" required>
                <span class="icon is-small is-left">
                    <i class="fas fa-flag-checkered"></i>
                </span>
            </p>
        </div>
    </div>


    <div class="navbar-item has-dropdown is-hoverable input" id="select-category">
        <a class="navbar-link">
            Select a category
        </a>

        <div class="navbar-dropdown">
            <div class="field">
                <label class="checkbox">
                    <input type="checkbox" name="all" id="all-categories">
                    All
                </label>
            </div>
            {{#if isLoggedIn}}
            <div class="field">
                <label class="checkbox">
                    <input type="checkbox" name="Friends">
                    Friends
                </label>
            </div>
            {{/if}}
            <div class="field">
                <label class="checkbox">
                    <input type="checkbox" name="Museums">
                    Museums
                </label>
            </div>
            <div class="field">
                <label class="checkbox">
                    <input type="checkbox" name="Michelin Restaurants">
                    Michelin Restaurants
                </label>
            </div>
            <div class="field">
                <label class="checkbox">
                    <input type="checkbox" name="Starred Restaurants">
                    Starred Restaurants
                </label>
            </div>
            {{#if isLoggedIn}}
            <div class="field">
                <label class="checkbox">
                    <input type="checkbox" name="Other">
                    Other
                </label>
            </div>
            {{/if}}
        </div>
    </div>


    <a class="button is-primary" id="get-itinerary-btn">Get Directions</a>
</div>