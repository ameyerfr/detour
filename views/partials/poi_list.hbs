<article class="panel is-primary">
    <p class="panel-heading has-text-weight-normal has-text-centered">
        Points of Interest along the Way
    </p>
    <p class="panel-tabs" id="poi-categories">
        <a data-category="all" class="is-active">All</a>
        <a data-category="Friends">Friends</a>
        <a data-category="Museums">Museums</a>
        <a data-category="Michelin Restaurants">Michelin Restaurants</a>
        <a data-category="Starred Restaurants">Starred Restaurants</a>
    </p>
    <div class="panel-block">
        <div class="field is-grouped full-width">
            <p class="control is-expanded has-icons-left">
                <input class="input is-primary" type="text" placeholder="Search" id="search-poi">
                <span class="icon is-left">
                    <i class="fas fa-search" aria-hidden="true"></i>
                </span>
            </p>
            <p class="control">
                <a class="button is-outlined" id="clear-search-btn">
                    Clear
                </a>
            </p>
        </div>
    </div>
    <div id="poi-list">
        {{>poi_list_item}}
    </div>
</article>