<div class="container">
    <h1 class="is-size-3 has-text-centered">List of your Points of Interest</h1>
</div>

<div class="section">
    <div class="columns">
        {{#each userPois}}
        <div class="column is-one-quarter">
            <div class="card">
                <div class="card-image">
                    <figure class="image is-4by3">
                        <img src="https://bulma.io/images/placeholders/1280x960.png" alt="Placeholder image">
                    </figure>
                </div>
                <div class="card-content">
                    <div class="level">
                        <div class="level-right">
                            <p class="level-item"><a href="/user/poi/edit/{{../idUser}}/{{this._id}}"
                                    class="button">Edit</a></p>
                            <p class="level-item"><a href="/user/poi/delete/{{../idUser}}/{{this._id}}"
                                    class="button">Delete PO</a></p>
                        </div>
                    </div>
                    <div class="content">

                    </div>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>